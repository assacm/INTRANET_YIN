<section id="container-subir" class="subirArchivo__layout disable">

         <div class="subirArchivo__container">
        <div class="subirArchivo__header">
            <h5 >Agregar factura</h5>
            <span id="close-subir" onclick="close()">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                    <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                </svg>
            </span>
        </div>
        <div class="subirArchivo__body">
            <div class ="subirArchivo__form">             
                   <div class="subirArchivo__info">
                        <div class="subirArchivo__container-input">
                            <label for="Descripcion">Agregue descripción de factura</label>
                            <input type="text" name="Descripcion" id="input-desc" />
                            <input type="text" name="Entry" id="input-entry" hidden/>
                            <input type="text" name="Num" id="input-num" hidden />
                            <input type="text" name="Obj" id="input-obj" hidden />

                        </div>
                        <div class="subirArchivo__container-input">
                            <label for="Comentario">Agregar comentario</label>
                            <textarea type="text" name="Comentario" id="input-comentario"></textarea>
                        </div>
                   </div>
                        @*<div class="subirArchivo__container-drop">*@
                    <div class="drag-area">
                        <p class="drag-text">Arrastre y suelte los archivos</p>
                        <span>O</span>
                    <button type="button" class="show-files">Seleccione los archivos</button>
                        <input type="file" name="Archivo" id="input-file" hidden multiple />
                    </div>
                    <div class="subirArchivo__footer">
                            <div id="preview" class="subirArchivo__container-file">
